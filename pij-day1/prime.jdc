print ("Please enter a number: ");
String str = System.console().readLine();
int i = Integer.parseInt(str);
int n = i;
boolean finished = false;
while (!finished){
	if (n > 2) {
		n = (n - 1);
		if ((i % n) == 0) {
			println (i + (" is not a prime Number"));
			finished = true;
		}
	} else {
		println (i + " is a prime number");
		finished = true;
	}
}
	